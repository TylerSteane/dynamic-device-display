<?xml version="1.0" encoding="UTF-8"?>
<device>
    <group id="1" permission="RR">
        <name>Garage door</name>
        <room>Outside</room>
    </group>

    <!--SwitchToggle-->
    <group id="1" permisison="WR">
        <gui_element id="1">
            <type>switchtoggle</type>
            <label>On/Off</label>
            <status_location>1</status_location>
            <comment>Light Switch</comment>
        </gui_element>
    </group>

    <!--ButtonToggle-->
    <group id="1" permisison="WR">
        <gui_element id="1">
            <type>buttontoggle</type>
            <label>Open/Close</label>
            <disp_settings>Open,Close</disp_settings>
            <status_location>1</status_location>
            <comment>Light Switch</comment>
        </gui_element>
    </group>

    <!--PlusMinus-->
    <group id="1" permisison="WR">
        <gui_element id="1">
            <type>plusminus</type>
            <label>Number</label>
            <disp_settings>0,10</disp_settings>
            <status_location>1</status_location>
            <comment>Number Counter</comment>
        </gui_element>
    </group>

    <!--RangeInput-->
    <group id="1" permisison="WR">
        <gui_element id="1">
            <type>rangeinput</type>
            <label>Volume</label>
            <disp_settings>Set,1000,3000</disp_settings>
            <status_location>1</status_location>
            <comment>Volume Slider</comment>
        </gui_element>
    </group>

    <!--DirectionalArrows-->
    <group id="1" permisison="WR">
        <gui_element id="1">
            <type>directionalbuttons</type>
            <label>Direction</label>
            <disp_settings>N,E,S,W</disp_settings>
            <status_location>1</status_location>
            <comment>Directional movement</comment>
        </gui_element>
    </group>

    <!--Selection-->
    <group id="1" permisison="WN">
        <gui_element id="1">
            <type>selection</type>
            <label>Move Door</label>
            <disp_settings>one,two,three,four,five,six</disp_settings>
            <status_location>1</status_location>
            <comment>Door positions</comment>
        </gui_element>
    </group>

    <!--Status-->
    <group id="1" permisison="WR">
        <gui_element id="1">
            <type>status</type>
            <label>Voltage</label>
            <status_location>1</status_location>
            <comment>Voltage level</comment>
        </gui_element>
    </group>

    <!--TextInput-->
    <group id="1" permisison="WR">
        <gui_element id="1">
            <type>textinput</type>
            <label>Name</label>
            <disp_settings>Submit</disp_settings>
            <status_location>1</status_location>
            <comment>Name</comment>
        </gui_element>
    </group>

    <!--Progress-->
    <group id="1" permission="WR">
        <gui_element id="1">
            <type>progress</type>
            <label>Loading...</label>
            <status_location>1</status_location>
            <comment>Loading progression</comment>
        </gui_element>
    </group>

    <!--ButtonGroup-->
    <group id="1" permisison="WR">
        <gui_element id="1">
            <type>buttongroup</type>
            <label>Numpad</label>
            <disp_settings>1,2,3,4</disp_settings>
            <status_location>1</status_location>
            <comment>Numpad</comment>
        </gui_element>
    </group>

    <!--Scheduler-->
    <group id="1" permisison="WR">
        <gui_element id="1">
            <type>scheduler</type>
            <label>Schedule an event</label>
            <disp_settings>Submit,Mon,Tue,Wed,Thur,Fri</disp_settings>
            <status_location>1</status_location>
            <comment>Event scheduler</comment>
        </gui_element>
    </group>

    <!--Password-->
    <group id="1" permisison="WR">
        <gui_element id="1">
            <type>password</type>
            <label>Password</label>
            <disp_settings>Submit</disp_settings>
            <status_location>1</status_location>
            <comment>Enter your password</comment>
        </gui_element>
    </group>
</device>
